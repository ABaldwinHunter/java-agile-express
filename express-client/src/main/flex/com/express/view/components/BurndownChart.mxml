<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
         backgroundAlpha="1" backgroundColor="#ffffff" width="100%" height="100%">
   <mx:Style>
      @font-face
      {
         src: local("Arial")
      ;
         font-family: EmbeddedArial
      ;
      }

      .lineChart {
         font-family: EmbeddedArial;
      }
   </mx:Style>

   <mx:Script>
      <![CDATA[
      import mx.charts.CategoryAxis;
      import mx.formatters.DateFormatter;

      [Bindable]
      public var dataProvider : Object;

      private function formatDate(categoryValue:Object, previousCategoryValue:Object, axis:CategoryAxis, categoryItem:Object) : String
      {
         var formatter : DateFormatter = new DateFormatter();
         formatter.formatString = "DD/MM/YYYY";
         return formatter.format(categoryValue);
      }
      ]]>
   </mx:Script>
   <mx:Stroke id="lineStroke" color="#3679b0" weight="2" alpha="1"/>
   <mx:Stroke id="axisStroke" color="#404040" alpha=".5" weight="2"/>

   <mx:LineChart dataProvider="{dataProvider}" styleName="lineChart" id="burndown" width="100%" height="100%">
      <mx:horizontalAxis>
         <mx:CategoryAxis id="xAxis" categoryField="date" labelFunction="formatDate" ticksBetweenLabels="false"/>
      </mx:horizontalAxis>
      <mx:verticalAxis>
         <mx:LinearAxis id="yAxis"/>
      </mx:verticalAxis>
      <mx:series>
         <mx:LineSeries displayName="Effort" xField="date" yField="effort" lineStroke="{lineStroke}"/>
      </mx:series>
      <!-- turn off drop shadows -->
      <mx:seriesFilters>
         <mx:Array/>
      </mx:seriesFilters>

      <mx:horizontalAxisRenderers>
         <mx:AxisRenderer axis="{xAxis}" labelRotation="50">
            <mx:axisStroke>{axisStroke}</mx:axisStroke>
            <mx:tickStroke>{axisStroke}</mx:tickStroke>
         </mx:AxisRenderer>
      </mx:horizontalAxisRenderers>

      <mx:verticalAxisRenderers>
         <mx:AxisRenderer axis="{yAxis}">
            <mx:axisStroke>{axisStroke}</mx:axisStroke>
            <mx:tickStroke>{axisStroke}</mx:tickStroke>
            <mx:minorTickStroke>{axisStroke}</mx:minorTickStroke>
         </mx:AxisRenderer>
      </mx:verticalAxisRenderers>

   </mx:LineChart>
   <mx:Legend dataProvider="{burndown}"/>
</mx:VBox>