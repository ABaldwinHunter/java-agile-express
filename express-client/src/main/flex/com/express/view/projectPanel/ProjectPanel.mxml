         width="100%">

   <mx:ComboBox id="cboProjects" width="230" labelField="title"
                prompt=" Open an existing Project "/>
   <mx:HBox horizontalGap="10" verticalAlign="bottom">
      <mx:Label styleName="bannerLabel" text="or"/>
